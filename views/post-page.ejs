</head>
<body>
    <%- include("partials/nav") %>
    <main class="post-page">
        <%- include ("partials/post-page/post", {post})%>
        <div class="comments">
            <h3>Comments</h3>
            <% post.comments.forEach(comment=>{ %>
                <%- include("partials/post-page/comment", {comment})%>
            <% })%>
        </div>
    </main>
</body>
<%- include("partials/shared-scripts") %>
</html>