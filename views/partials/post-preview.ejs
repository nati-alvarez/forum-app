<div class="post-preview">
    <div class="community">
        <%= post.community_name %>
    </div>
    <div class="content">
        <div class="author">
            <img width="35px" height="35px" src="https://res.cloudinary.com/dtbudl0yx/image/fetch/w_2000,f_auto,q_auto,c_fit/https://adamtheautomator.com/content/images/size/w2000/2019/10/user-1633249_1280.png"/>
            <%= post.author_username %>
        </div>
        <h3><%= post.post_title %></h3>
    </div>
    <div class="stats">
        <div class="messages">
            <%= post.comments %> <i class="typcn typcn-messages"></i>
        </div>
        <div class="views">
            <%= post.views %> <i class="typcn typcn-eye"></i>
        </div>
        <div class="likes">
            <%= post.likes %> <i class="typcn typcn-thumbs-up"></i>
        </div>
    </div>
</div>