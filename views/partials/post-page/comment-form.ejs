<section class="comment-form">
    <% if(!user) { %>
        <p>You are not logged in. You must be logged in to comment.</p>
    <% } else if(!canComment) { %>
        <p>You must be a part of this community to comment.</p>
    <% } else { %>
    <form data-post-id="<%= postId %>">
        <h3>Leave a comment</h3>
        <textarea></textarea>
        <button class="primary">Send Comment</button>
        <div class="status"></div>
    </form>
    <% } %>
</section>